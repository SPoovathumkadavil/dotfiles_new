  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": false,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Mirage"
  },
  "lsp": {
    "java": {
      "settings": {
        "java.jdt.ls.java.home": "/Users/sally/wpilib/2025/jdk",
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-17",
            "path": "/Users/sally/wpilib/2025/jdk",
            "default": true
          }
        ],
        "java.completion.matchCase": "off"
      },
      "initialization_options": {}
    }
  },
  "tab_size": 2,
  "format_on_save": "off"
}
